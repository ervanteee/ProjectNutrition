@model IEnumerable<ProjectNutrition.Models.Drink>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Drinks</h2>
    <div class="mb-3">
        @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary" })
    </div>
    <table class="table table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th>@Html.DisplayNameFor(model => model.Company)</th>
                <th>@Html.DisplayNameFor(model => model.Img_Path)</th>
                <th>@Html.DisplayNameFor(model => model.Admin1.Username)</th>
                <th>@Html.DisplayNameFor(model => model.Grade1.Grade1)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Company)</td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Img_Path))
                        {
                            <img src="@Url.Content("~/Contents/Images/" + item.Img_Path)" alt="Drink Image" style="width:100px; height:auto;" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Admin1.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Grade1.Grade1)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
