@model ProjectNutrition.Models.Food

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <h2 class="mb-4">Food Details</h2>

    <div class="card">
        <div class="card-header">
            <h4>Food Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Company)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Company)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Img_Path)
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Img_Path))
                    {
                        <img src="@Url.Content("~/Contents/Images/" + Model.Img_Path)" alt="Food Image" style="max-width: 200px; height: auto;" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Admin1.Username)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Admin1.Username)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Grade1.SugarContent)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Grade1.SugarContent)
                </dd>
            </dl>
        </div>
    </div>

    <div class="mt-4">
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
