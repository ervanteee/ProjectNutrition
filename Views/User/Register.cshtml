@model ProjectNutrition.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <link rel="stylesheet" href="~/Contents/css/style.css" type="text/css" />
    <link rel="stylesheet" href="~/Contents/bootstrap/css/bootstrap.min.css" type="text/css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <title>Register</title>
</head>
<body>

    <div class="bubble bubble1"></div>
    <div class="bubble bubble2"></div>
    <div class="bubble bubble3"></div>

    <div class="container h-100 align-content-center mb-5">
        <div class="row">
            <div class="col welcome-parent">
                <div class="seperate">
                    <h1 class="welcome-head">Welcome!</h1>
                    <small class="welcome-text">Create your account to start your journey with us.</small>
                    <small class="welcome-text"><br>Remember to stay happy and be kind!</small>
                </div>
            </div>
            <div class="col base_form">
                <div class="text-center mt-5">
                    <h1 class="login">Register</h1>
                    <small>Create your account</small>
                </div>
                @using (Html.BeginForm("Register", "User", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group align d-flex flex-column align-items-center mt-3 input-icons">
                        <i class="fa-solid fa-user"></i>
                        @Html.TextBoxFor(a => a.Nama, new { @class = "form-control w-75 mb-3", placeholder = "Enter Name" })
                        @Html.ValidationMessageFor(a => a.Nama, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group align d-flex flex-column align-items-center input-icons">
                        <i class="fa-solid fa-envelope"></i>
                        @Html.TextBoxFor(a => a.Email, new { @class = "form-control w-75 mb-3", placeholder = "Enter Email" })
                        @Html.ValidationMessageFor(a => a.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group align d-flex flex-column align-items-center input-icons">
                        <i class="fa-solid fa-phone"></i>
                        @Html.TextBoxFor(a => a.Phone, new { @class = "form-control w-75 mb-3", placeholder = "Enter Phone" })
                        @Html.ValidationMessageFor(a => a.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group align d-flex flex-column align-items-center input-icons">
                        <i class="fa-solid fa-user"></i>
                        @Html.TextBoxFor(a => a.Username, new { @class = "form-control w-75 mb-3", placeholder = "Enter Username" })
                        @Html.ValidationMessageFor(a => a.Username, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group align d-flex flex-column align-items-center input-icons">
                        <i class="fa-solid fa-lock"></i>
                        @Html.PasswordFor(a => a.Password, new { @class = "form-control w-75 mb-3", placeholder = "Password" })
                        @Html.ValidationMessageFor(a => a.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="d-flex flex-column align-items-center">
                        <button type="submit" class="btn btn-primary">Sign Up</button>
                    </div>
                    <div class="text-center">
                        <small>Already have an account?</small>
                        <a href="@Url.Action("Login", "User")"><small>Sign In</small></a>
                    </div>
                }
            </div>
        </div>
    </div>

</body>
</html>

